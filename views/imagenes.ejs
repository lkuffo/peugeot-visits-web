<!DOCTYPE html>
<html>

  <%- include('header.ejs') %>

  <body>

    <body class="hm-index-body text-center" style="overflow-x: hidden">

    <div class="cover-container d-flex h-100 mx-auto flex-column">

      <%- include('navbar.ejs') %>
      <div class="hm-container">

          <h1><%= title %></h1>

          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#imagenesmodal">
            AÃ±adir
          </button>

          <table id="imagenestable" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>URL</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody id="imagenesbody">

            </tbody>
          </table>
      </div>
    </div>

    <div class="modal" id="imagenesmodal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Agregar Imagen</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label for="imageURL">URL</label>
              <input type="text" class="form-control" id="imageURL">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" id="guardarimagenes" class="btn btn-primary">Guardar</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
          </div>
        </div>
      </div>
    </div>

    <%- include('footer.ejs') %>
  </body>
</html>
