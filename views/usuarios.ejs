<!DOCTYPE html>
<html>

  <%- include('header.ejs') %>

  <body>

    <body class="hm-index-body text-center" style="overflow-x: hidden">

    <div class="cover-container d-flex h-100 mx-auto flex-column">

      <%- include('navbar.ejs') %>
      <div class="hm-container">

          <h1><%= title %></h1>

          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#usersmodal">
            AÃ±adir
          </button>

          <table id="userstable" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Usuario</th>
                    <th>Password</th>
                    <th>Tipo de Usuario</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody id="usersbody">

            </tbody>
          </table>
      </div>
    </div>

    <div class="modal" id="usersmodal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Agregar Usuario</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label for="username">Usuario</label>
              <input type="text" class="form-control" id="username" placeholder="Repuestos...">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="text" class="form-control" id="password" placeholder="Repuestos...">
            </div>
            <div class="form-group">
              <label for="userType">Tipo de Usuario</label>
              <select class="form-control" id="usertype">
                <option value="usuario" selected>Usuario</option>
                <option value="admin">Admin</option>
              </select>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" id="guardarusers" class="btn btn-primary">Guardar</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
          </div>
        </div>
      </div>
    </div>

    <%- include('footer.ejs') %>
  </body>
</html>
